<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TravelJournal" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.TravelJournal.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.TravelJournal.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TravelJournal.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Dialog.DatePicker" parent="Theme.AppCompat.Light.Dialog">
        <!--    <style name="Theme.Dialog.DatePicker" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">-->
        <!-- Calendar Header background -->
        <item name="colorAccent">@color/dark_orange</item>
        <!-- Year-->
        <item name="android:textColorSecondaryInverse">@color/peach</item>
        <!--day , month-->
        <item name="android:textColorPrimaryInverse">@color/white</item>

        <!-- Calender Day Number & Month Arrows color (< >) -->
        <item name="android:textColorPrimary">@color/black</item>
        <!-- Week Text Color-->
        <item name="android:textColorSecondary">@color/grey</item>
        <!-- Arrow border color(< >) -->
        <item name="android:selectableItemBackgroundBorderless">@color/dark_blue</item>

        <!-- Selected Item color-->
        <item name="colorControlActivated">@color/dark_green</item>
        <!-- Highlight item color-->
        <item name="colorControlHighlight">@color/venetian_red</item>

        <!--Calender Background color -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Ok Cancel Color-->
        <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerButtonStyle</item>
    </style>

    <style name="DatePickerButtonStyle" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/dark_orange</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="TripDetailsTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TripDetailsSubtitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>